{
    "version": "1.0.0",
    "name": "vite_vue3_template",
    "description": "vite + vue3 + typescript project template",
    "author": "jeremyjone",
    "license": "MIT",
    "keywords": [
        "vite",
        "vue3",
        "typescript",
        "template"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jeremyjone/vue3-ts-template.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "serve": "vite preview",
        "prepare": "husky install",
        "lint": "eslint src/**/*.{js,vue,ts,jsx,tsx}",
        "lint:fix": "eslint src/**/*.{js,vue,ts,jsx,tsx} --fix",
        "lint:create": "eslint --init",
        "lint-staged": "lint-staged",
        "test:unit": "jest --passWithNoTests",
        "commit": "git-cz"
    },
    "lint-staged": {
        "*.{vue,js,ts,jsx,tsx}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "axios": "^0.22.0",
        "vue": "^3.0.5",
        "vue-router": "4",
        "vuex": "^4.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.15.8",
        "@babel/preset-env": "^7.15.8",
        "@babel/preset-typescript": "^7.15.0",
        "@commitlint/cli": "^13.2.1",
        "@commitlint/config-conventional": "^13.2.0",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.3",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vitejs/plugin-vue": "^1.2.5",
        "@vue/babel-plugin-jsx": "^1.1.0",
        "@vue/compiler-sfc": "^3.0.5",
        "@vue/test-utils": "^2.0.0-rc.16",
        "babel-jest": "26.0.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "cz-customizable": "^6.3.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-airbnb-typescript": "^14.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^25.0.5",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^7.19.1",
        "husky": "^7.0.0",
        "jest": "26.0.0",
        "less": "^4.1.2",
        "lint-staged": "^11.2.3",
        "prettier": "^2.4.1",
        "sass": "^1.42.1",
        "stylus": "^0.55.0",
        "ts-jest": "^26.4.4",
        "typescript": "^4.3.2",
        "vite": "^2.4.2",
        "vite-plugin-eslint": "^1.3.0",
        "vue-jest": "^5.0.0-alpha.10",
        "vue-tsc": "^0.0.24"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-customizable"
        }
    }
}
